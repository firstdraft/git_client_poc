<div class="row mb-4">
  <div class="col">
    <div class="card">
      <h2 class="card-header">
        Status
      </h2>

      <div class="card-block">
        <pre>
          <%= simple_format @status %>
        </pre>

        <iframe srcdoc="<%= @diff %>" width="100%" height="400">
        </iframe>

        <%= form_tag do %>
          <div class="form-group">
            <%= label_tag :summary %>
            <%= text_field_tag :summary, nil, placeholder: "Enter a brief summary of your changes (required)", class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= label_tag :description %>
            <%= text_area_tag :description, nil, placeholder: "Enter a longer description of your changes (optional)", class: "form-control" %>
          </div>

          <%= button_tag "Commit and Sync", class: "btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col">
    <div class="card">
      <h2 class="card-header">
        Branches
      </h2>

      <div class="card-block">
        <pre>
          <%= simple_format @branches %>
        </pre>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col">
    <div class="card">
      <h2 class="card-header">
        Log
      </h2>

      <div class="card-block">
        <pre>
          <%= simple_format @log %>
        </pre>
      </div>
    </div>
  </div>
</div>
